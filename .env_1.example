# .env.example
# Copy this file to .env.local and fill in your values

# ==========================================
# DATABASE
# ==========================================
DATABASE_URL="postgresql://username:password@localhost:5432/storefun?schema=public"

# ==========================================
# PRIVY (Authentication)
# Get these from https://dashboard.privy.io
# ==========================================
NEXT_PUBLIC_PRIVY_APP_ID="your-privy-app-id"
PRIVY_APP_SECRET="your-privy-app-secret"

# ==========================================
# SOLANA
# ==========================================
# Use Helius for production: https://helius.dev
SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"
# For devnet testing:
# SOLANA_RPC_URL="https://api.devnet.solana.com"

# Platform wallet public key (receives all payments)
NEXT_PUBLIC_PLATFORM_WALLET="YourPlatformWalletPublicKey"

# Platform wallet private key (for payouts) - KEEP SECURE!
# In production, use a secure vault like AWS Secrets Manager
PLATFORM_WALLET_PRIVATE_KEY="base64-encoded-private-key"

# ==========================================
# FILE STORAGE (Cloudflare R2 or AWS S3)
# ==========================================
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key"
R2_SECRET_ACCESS_KEY="your-r2-secret-key"
R2_BUCKET_NAME="store-fun-uploads"
NEXT_PUBLIC_CDN_URL="https://your-cdn-url.com"

# ==========================================
# EMAIL (Resend)
# ==========================================
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="noreply@store.fun"

# ==========================================
# MOONPAY (Payment Gateway)
# Get these from https://dashboard.moonpay.com
# ==========================================
# Public API key (safe to expose in client)
NEXT_PUBLIC_MOONPAY_PUBLIC_KEY="pk_test_your_public_key"
# Secret key (KEEP SECURE - server-side only!)
MOONPAY_SECRET_KEY="sk_test_your_secret_key"
# Webhook secret for verifying webhook signatures
MOONPAY_WEBHOOK_SECRET="your_webhook_secret"
# MoonPay base URL (usually https://buy.moonpay.com)
NEXT_PUBLIC_MOONPAY_BASE_URL="https://buy.moonpay.com"
# For sandbox testing:
# NEXT_PUBLIC_MOONPAY_BASE_URL="https://buy-staging.moonpay.com"

# ==========================================
# APP CONFIG
# ==========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="store.fun"

# ==========================================
# SUPER ADMIN SETUP
# ==========================================
# Your Solana wallet address (will be made super admin on first run)
SUPER_ADMIN_WALLET="YourSolanaWalletAddress"
